@page
@model BookStore.WEB.Pages.Categorys.IndexModel
@{
}

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-white">CategoryList</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-page="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp;Add New Item </a>
            </div>
            <hr />
            <br />
            <br />


            @if (Model.Categories.Any())
            {

                <table class="table table-hover">
                    <tr>
                        <td>Name</td>
                        <td>DisplayOrder</td>
                        <td>Actions</td>

                    </tr>
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.DisplayOrder</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>

                            </td>
                        </tr>
                    }
                </table>
            }


            else
            {

                <div class="alert alert-warning">
                    No Dataa Found Yet!

                </div>
            }

        </div>


    </div>
